{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block body_columns %}col-12{% endblock %}
{% block body %}
    <div class="row pt-5">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="card ">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal">{{ 'Please sign in'| trans }}</h1>
                </div>
                <div class="card-body">
                    <form method="POST">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-group row">
                            <label for="inputEmail" class=" sr-only">{{ 'Email'|trans }}</label>
                            <div class="col-sm-12">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                       class="form-control" placeholder="{{ 'Email'|trans }}" required autofocus>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class=" sr-only">{{ 'Password'|trans }}</label>
                            <div class="col-sm-12">
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       placeholder="{{ 'Password'|trans }}" required>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            {{ 'Sign in'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-4"></div>
    </div>
{% endblock %}
