<div class="modal fade" id="departmentModal" tabindex="-1" role="dialog" aria-labelledby="departmentModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="departmentModalDialogTitle">New department</h5>
            </div>
            <div class="modal-body p-4">
                <form id="department-form" name="department_form" method="post" action="{{ path('department_new') }}">
                    <div class="form-group">
                        <input type="text" class="form-control" id="department_name" placeholder="Department">
                        <span class="pt-1 text-danger js-department-error"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button id="department-btn" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>